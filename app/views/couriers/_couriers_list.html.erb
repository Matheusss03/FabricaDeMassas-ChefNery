<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<hr>
<div class="main-box-body clearfix">
    <div class="table-responsive">
        <table class="table user-list">
            <thead>
                <tr>
                <th><span>Entregador</span></th>
                <th class="text-center"><span>Status</span></th>
                <th><span>Telefone</span></th>
                <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <% if !@couriers.blank? %>
                    <% for courier in @couriers %>
                        <tr>
                            <td>
                                <img src="http://bootdey.com/img/Content/user_1.jpg" alt="">
                                <%= link_to courier.name, courier_path(courier) %>
                            </td>
                            <td class="text-center">
                                <% if courier.status == "livre" %>
                                        <span class="label label-success">livre</span>
                                <% else %>
                                    <span class="label label-danger">saiu para entrega</span>
                                <% end %>
                            </td>

                            <td>
                                <%= courier.phone %>
                            </td>
                            <td style="width: 20%;">
                                <%= link_to courier_path(courier) do %>
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                    </span>
                                <% end %>
                                <%= link_to edit_courier_path(courier) do %>
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                    </span>
                                <% end %>
                                <%= link_to courier, method: :delete do %>
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                    </span>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>