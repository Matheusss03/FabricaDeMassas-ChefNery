<%= content_tag :div, :class => "container" do -%>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Produto:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Descrição:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Categoria:</strong>
    <%= @product.category.to_s %>
  </p>

  <p>
    <strong>Preço:</strong>
    R$<%= @product.price %>
  </p>

  <p>
    <strong>Ingredientes:</strong>
    <ul>
    <%@product.ingredients.each do |i|%>
        <li><%= i.title %></li>
        <!-- <%= i.price %> -->
    <% end %>
    </ul>
  </p>

  <p>
    <%= link_to 'Editar Produto', edit_product_path(@product) %> |
    <%= link_to 'Voltar', products_path %> 
  </p>

  <div class="star-rating" data-score= <%= @avg_review %> ></div>
  <em><%= "#{@reviews.length} avaliações" %></em>


  <%= link_to "Avaliar", new_product_review_path(@product), class: "btn btn-danger" %>

  <% if @reviews.blank? %>
    <h3>No reviews just yet, would you like to add the first!</h3>
    <%= link_to "Avaliar", new_product_review_path(@product), class: "btn btn-danger" %>
  <% else %>
    <% @reviews.each do |review| %>
      <div class="reviews">
        <strong>
          <%= review.user.name %>
        </strong>
         <div class="star-rating" data-score= <%= review.rating %> ></div>        
        <p><%= review.comment %></p>

      </div>
    <% end %>
  <% end %>

  <script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
  </script>
<% end -%>
