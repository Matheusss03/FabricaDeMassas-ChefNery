<%= content_tag :div, class: "container" do %>
    <%= content_tag :div, class:"col-md-3" do %>
        <%= content_tag :form, class: "navbar-form", role:"search" do %>
            <%= content_tag :div, class:"input-group add-on" do %>
                <%= content_tag :div, class: "input-group-btn" do %>
                    <%= text_field_tag :find, "", placeholder:"Pesquise um produto", class:"form-control", id:"srch-term", type:"text"%>
                    <%= button_tag(type: "submit", class: "btn btn-default") do %>
                        <i class="glyphicon glyphicon-search"></i>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
        <%= content_tag :br%>
    <% end %>
<% end %>
