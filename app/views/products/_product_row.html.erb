<!-- This view shows the format for each product with name, image, price, link to product and insert to cart-->

<!-- Shows all products-->
<%= form_for product, remote: true do |f| %>
	<%= content_tag :div, class: "container padding-between-containers" do %>
		<%= content_tag :div, class: "col-xs-8 transparent-background-black white-second-background" do %>
			<%= content_tag :div, class: "row" do %>
				<!-- Image at left, not present images will show a default image to that product -->
				<%= content_tag :div, class: "col-xs-5" do %>
					<%= content_tag :div, class: "mythumbnail image-size" do %>
						<% if product.imageproduct.present? %>
							<%= image_tag(product.imageproduct.big) %>
						<% else %>
							<%= image_tag "lasanha.jpg", class: "img-responsive"%>
						<% end %>
					<% end %>
				<% end %>
				<!-- Other informations at right -->
				<%= content_tag :div, class: "pull-right padding-right" do %>
			              <%= link_to product_path(product) do%>
			                <h4><%= product.title %></h4>
			              <% end %>
					<h4><span style="color: green"><%= "R#{number_to_currency product.price}" %></span></h4>
			              <%= product.category_decorator(product.category_of_product) %>

					<%= content_tag(:br) %>
					<%= content_tag :div, class: "input-group" do %>
						<%= f.number_field :quantity, value: 1, class: "form-control", min: 1%>
							<%= f.hidden_field :product_id, value: product.id %>
						<%= f.submit "Adicionar ao carrinho", class: "btn btn-primary" %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
