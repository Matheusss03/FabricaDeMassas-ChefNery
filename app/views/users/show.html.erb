<!-- This show the account of user -->
<%= content_tag :div, class: "set-image-background-userPerfil" do %>
    <div class="row">
        <div class="col-md-4 col-md-offset-3 top">

        <%= content_tag :div, class: "title-users height-to-bottom" do %>
            </h1>Minha Conta</h1>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-users padding-top-5" do %>
            <h4>Nome do usuário</h4>
            <%= @user.name %>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-users padding-top-5" do %>     
            <h4> Nome do Usuário </h4>
            <%= @user.email %>
        <% end %>

        <%= content_tag :div, class: "btn btn-primary color-button-white" do %>
            <% if current_user?(@user) %>
                <%= link_to "Editar Perfil", edit_user_path(current_user) %>
            <% end %>
        <% end %>

        <%= content_tag :div, class: "btn btn-danger color-button-white" do %>
            <% if current_user?(@user) %>
                <%= link_to "Excluir Conta", @user, method: :delete, data: { confirm: "Você tem certeza?" } %>
            <% end %>
        <% end %>


        </div>
    </div>
<% end %>