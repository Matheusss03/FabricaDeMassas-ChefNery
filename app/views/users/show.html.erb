<!-- This show the account of user -->
<div class="row">
    <div class="col-md-4 col-md-offset-3 top">

    <%= content_tag :div, class: "title-users" do %>
        </h1>Minha Conta</h1>
    <% end %>

    <%= content_tag :div, class: "space-between-fields-users" do %>
        <%= @user.name %>
    <% end %>

    <%= content_tag :div, class: "space-between-fields-users" do %>
        <%= @user.email %>
    <% end %>

    <%= content_tag :div, class: "btn btn-primary color-button-white" do %>
        <% if current_user?(@user) %>
            <%= link_to "Editar Perfil", edit_user_path(current_user) %>
        <% end %>
    <% end %>

    <%= content_tag :div, class: "btn btn-danger color-button-white" do %>
        <% if current_user?(@user) %>
            <%= link_to "Excluir Conta", @user, method: :delete, data: { confirm: "VocÃª tem certeza?" } %>
        <% end %>
    <% end %>


    </div>
</div>