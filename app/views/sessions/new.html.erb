<%= content_tag :div, class: "set-image-background" do %>

  <%= content_tag :div, class: "space-between-fields-20" do %>
      <%= content_tag :div, class: "center" do %>
        <h1>Log in</h1>
      <% end %>
  <% end %>
    
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= content_tag :div, class: "space-between-fields-20" do %>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-10" do %>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-20" do %>
           <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
      
      <% end %>
      
      <p>New user? <%= link_to "Entrar!", signup_path %></p>
    
    </div>
  </div>

<% end %>