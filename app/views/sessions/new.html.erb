<%= content_tag :div, class: "set-image-background-LogIn" do %>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">

      <%= content_tag :div, class: "top" do %>
        <h1>Entrar</h1>
      <% end %>

      <%= form_for(:session, url: login_path) do |f| %>

        <%= content_tag :div, class: "space-between-fields-20" do %>
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, class: 'form-control' %>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-20" do %>
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, class: 'form-control' %>
        <% end %>

        <%= content_tag :div, class: "space-between-fields-20" do %>
           <%= f.submit "Entrar", class: "btn btn-primary" %>
        <% end %>

      <% end %>

      <p>Novo Usu√°rio? <%= link_to "Cadastrar!", signup_path %></p>

    </div>
  </div>

<% end %>