<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @order_items.size == 0 %>
  <p class="text-center">
    Não há itens no seu carrinho de compras. Por favor volte para a página de <%= link_to "produtos", products_path %> e adicione items ao seu carrinho.
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
  <% end %>

	<%= form_for current_order do |f| %>
    <h4> Entrega por motoboy? 
      <%= check_box_tag "mycheckbox", "mycheckbox", false%>
    </h4>
    <br>
    <div id="mycheckboxdiv" style="display:none">
      <%= f.text_field :shippment_address, :placeholder => 'Endereço', class: 'form-control' %> <br/>
      <div style="float: right">
        <p style="float:right"> Acréscimo de <%= "R#{number_to_currency current_order.delivery_price}" %> </p>
        <br>
        <div id="mycheckboxdiv">
          <h4 class="text-right">
            Preço total:  
            <span style="color: green">
              <%= "R#{number_to_currency current_order.subtotal + 10}" %> 
            </span>
          </h4>
        </div>
      </div>
    </div>
    <div id="myuncheckboxdiv" style="float: right">
      <div id="myuncheckboxdiv">
        <h4 class="text-right">
          Preço total:  
          <span style="color: green">
            <%= "R#{number_to_currency current_order.subtotal}" %> 
          </span>
        </h4>
      </div>
    </div>
    <%= f.submit "Enviar pedido", class: 'btn btn-primary' %>

  <%= button_to "Adicionar mais produtos ao carrinho", products_path , class: 'btn btn-primary'%>
<% end %>

<% end %>

<script type="text/javascript">
$('#mycheckbox').change(function() {
    $('#mycheckboxdiv').toggle();
    $('#myuncheckboxdiv').toggle();
});
</script>